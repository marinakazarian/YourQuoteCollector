{
  "manifest_version": 3,
  "name": "Your Quote Collector",
  "version": "1.0",
  "description": "Save selected text as quotes.",
  "permissions": ["activeTab", "storage", "contextMenus"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}
