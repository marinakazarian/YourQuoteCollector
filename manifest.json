{
    "manifest_version": 2,
    "name": "Theme Styler",
    "version": "1.0",
    "description": "Customize your Chrome theme",
    "permissions": ["activeTab", "storage"],
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "icons": {
        "128": "images/icon-128.png"
    },
    "file_handlers": {
        "image": {
            "types": ["image/*"]
        }
    }
}