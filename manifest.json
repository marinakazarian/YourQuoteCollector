{
  "manifest_version": 3,
  "name": "Your Quote Collector",
  "version": "1.0",
  "description": "Save selected text as quotes or input your own. Display quotes randomly to remind you of past motivational messages.",
  "permissions": ["activeTab", "storage", "contextMenus"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
