{
    "manifest_version": 3,
    "name": "Theme Styler",
    "version": "1.0",
    "description": "Customize your Chrome theme",
    "permissions": ["storage", "declarativeContent", "activeTab", "scripting"],
    "action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    }
}